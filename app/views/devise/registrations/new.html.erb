<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				
				<%= devise_error_messages! %>
				
								
				
				<h3 class="form-title"> Register to Meteocam</h3>


				<div class="form-group">
					<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
					<%= f.label :username, :class=>"control-label visible-ie8 visible-ie9" %>
					<div class="input-icon">
						<i class="fa fa-user"></i>	
						<%= f.text_field :username, autofocus: true, autocomplete:"off", placeholder:"Username", :class=>"form-control placeholder-no-fix"  %>
					</div>
				</div>
				
				

				
				<div class="form-group">
					<%= f.label :password, :class=>"control-label visible-ie8 visible-ie9" %>
					<div class="input-icon">
						<i class="fa fa-lock"></i>
						<%= f.password_field :password, autocomplete: "off", placeholder: "Password" , :class=>"form-control placeholder-no-fix" %>
					</div>
				</div>
				
				<div class="form-group">
					<%= f.label :password_confirmation, :class=>"control-label visible-ie8 visible-ie9" %>
					<div class="input-icon">
						<i class="fa fa-lock"></i>
						<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" , :class=>"form-control placeholder-no-fix" %>
					</div>
				</div>
				
				
								<div class="form-group">
					<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
					<%= f.label :email, :class=>"control-label visible-ie8 visible-ie9" %>
					<div class="input-icon">
						<i class="fa fa-user"></i>	
						<%= f.email_field :email, autofocus: true, autocomplete:"off", placeholder:"Email", :class=>"form-control placeholder-no-fix"  %>
					</div>
				</div>
				
				
				<div class="form-actions">
 
					
					<%= button_tag(type: 'submit', class: "btn btn-info pull-right") do %>
					<i class="fa fa-sign-in "></i> Sign up
					<% end %>
				
				
				</div>
				
		<div class="create-account">
			<p>
				 Don't want to register ?  &nbsp; <%= link_to( "Sign in with social media", new_user_session_path) %>
			</p>
		</div>
		


<% end %>

